



#------+
#  OS  |
#------+

#centos version
alias version='cat /etc/redhat-release'

#Locale
export LANG=ja_JP.UTF-8


#----- -+
#  zsh  |
#-------+

#Complement
autoload -U compinit
compinit

autoload predict-on
predict-on



#Command-history
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data

#Key-bind
bindkey -v

#Prompt
case ${UID} in
0)
    PROMPT="%F{red}[%n] %c %#%f "
    ;;
*)
    PROMPT="%F{cyan}[%n] %c %#%f "
    ;;
esac


#Change directory
setopt auto_cd
setopt auto_pushd
setopt correct
setopt list_packed
setopt nolistbeep



#------------------+
#  File operation  |
#------------------+

alias la='ls -a'
alias ll='ls -l'
alias lla='ls -l -a'
alias rm='ls -i'
alias cp='cp -i'
alias mv='mv -i'
alias lsc='ls -AlFh --show-control-chars --color=auto'
alias df='df -h'
alias free='free -m'

#Jobs
alias jobs='jobs -l'



#---------+
#  zshrc  |
#---------+

alias zshrce='vim ~/.zshrc'

zshrcc ()
{
 source ~/.zshrc
 ori_dir=$(pwd)
 \cp ~/.zshrc ~/config/.zshrc.bak
 cd ~/config
 ~/config/push.sh
 cd $ori_dir
}



#-------+
#  Vim  |
#-------+

vimrce='vim ~/.vimrc'

vimrcc ()
{
 ori_dir=$(pwd)
