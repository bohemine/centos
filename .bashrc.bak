#----------+
#   Tmux   |
#----------+
alias tmuxe='vim ~/.tmux.conf'

tmuxc ()
{
 ori_dir=$(pwd)
 \cp ~/.tmux.conf ~/config/.tmux.conf.bak
 cd ~/config
 ~/config/push.sh
 cd $ori_dir
}


#run tmux
if [ -z $TMUX ]; then
  if $(tmux has-session); then
    tmux attach
  else
    tmux
  fi
fi




