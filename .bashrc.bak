#----------+
#   Cron   |
#----------+

alias crone='vim ~/.crontab'

cronc ()
{
 ori_dir=$(pwd)
 \cp ~/.crontab ~/config/.crontab.bak
 cd ~/config
 ~/config/push.sh
 cd $ori_dir

 crontab ~/.crontab

}



